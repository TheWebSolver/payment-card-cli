{
  "name": "thewebsolver/payment-card-cli",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "TheWebSolver\\Codegarage\\PaymentCard\\": "Src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TheWebSolver\\Codegarage\\Test\\": "Tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "thewebsolver/cli": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.11",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "bin": "payment-card",
  "scripts": {
    "unittest": "vendor/bin/phpunit",
    "analyze": "vendor/bin/phpstan",
    "sniff": "vendor/bin/phpcs",
    "test": [
      "@analyze",
      "@unittest",
      "@sniff"
    ],
    "useDev": "@putenv COMPOSER=composer.dev.json",
    "update:dev": [
      "@useDev",
      "@composer update:packages"
    ],
    "test:dev": [
      "@useDev",
      "@composer test"
    ]
  }
}
