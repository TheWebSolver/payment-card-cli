{
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "thewebsolver/cli": "dev-main",
    "thewebsolver/payment-card": "dev-main"
  },
  "scripts": {
    "useProd": "@putenv COMPOSER=composer.json",
    "update:packages": [
      "@composer update --prefer-source",
      "@useProd",
      "@composer dump-autoload -o"
    ],
    "test": ["phpstan", "phpunit"]
  },
  "repositories": [
    {
      "type": "path",
      "url": "../../cli"
    },
    {
      "type": "path",
      "url": "../../payment-card"
    }
  ]
}
